<div class="response-container">
    <h3 class="response-header">Detalhes da Resposta</h3>

    <!-- Produtos -->
    <h4 class="response-subheader">Produtos</h4>
    <ul class="response-list">
        {% for product in products %}
            <div class="response-item">
                <h2>{{ product.description }}</h2>
                <p><strong>GTIN:</strong> {{ product.gtin }}</p>
                <p><strong>Índice:</strong> {{ product.index | default('N/A') }}</p>
                <p><strong>Preço:</strong> R$ {{ product.price | number_format(2, ',', '.') }}</p>
                <p><strong>Volume:</strong> {{ product.volume | default('N/A') }} {{ product.unity | default('N/A') }}</p>
                <p><strong>Quantidade:</strong> {{ product.quantity | default('N/A') }}</p>
                <p><strong>Status:</strong> {{ product.status | default('N/A') }}</p>
            </div>
        {% else %}
            <div class="response-item">
                Nenhum produto encontrado.
            </div>
        {% endfor %}
    </ul>

    <!-- Erros -->
    {% if errors is not empty %}
        <h4 class="response-subheader">Erros</h4>
        <ul>
            {% for error in errors %}
                <li><strong>Erro:</strong> {{ error }}</li>
            {% endfor %}
        </ul>
    {% endif %}

    <!-- Empresa -->
    <h4 class="response-subheader">Empresa</h4>
    <p>{{ company.companyName | default('N/A') }}</p>

    <!-- Usuário -->
    <h4 class="response-subheader">Usuário</h4>
    <p>{{ user.userName | default('N/A') }}</p>

    <!-- Data e Hora -->
    <p><strong>Data e Hora:</strong> {{ dateTime | date('d/m/Y H:i:s') }}</p>

</div>
